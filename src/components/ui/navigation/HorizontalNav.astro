<style>
  .nav-showcase {
    padding: 2rem;
    border: 1px solid var(--border-light);
    border-radius: 8px;
    background: var(--card-bg-light);
    margin: 1rem 0;
    transition: background 0.3s ease, border-color 0.3s ease;
  }

  html.dark .nav-showcase {
    background: var(--card-bg-dark);
    border-color: var(--border-dark);
  }

  .nav-showcase h3 {
    margin: 0 0 1.5rem 0;
    color: #333;
    font-size: 1.2rem;
    font-weight: 600;
  }

  html.dark .nav-showcase h3 {
    color: var(--header-text-dark);
  }

  .horizontal-nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1rem 2rem;
    background: var(--card-bg-light);
    border-radius: 12px;
    box-shadow: 0 2px 15px rgba(0, 0, 0, 0.1);
    border: 1px solid #f0f0f0;
    transition: background 0.3s ease, border-color 0.3s ease, box-shadow 0.3s ease;
  }

  html.dark .horizontal-nav {
    background: var(--card-bg-dark);
    border-color: var(--border-dark);
    box-shadow: 0 2px 15px rgba(0, 0, 0, 0.3);
  }

  .nav-brand {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .logo {
    font-size: 1.8rem;
  }

  .brand-text {
    font-size: 1.5rem;
    font-weight: 700;
    color: #333;
  }

  html.dark .brand-text {
    color: var(--header-text-dark);
  }

  .nav-menu {
    display: flex;
    list-style: none;
    margin: 0;
    padding: 0;
    gap: 2rem;
  }

  .nav-item {
    position: relative;
  }

  .nav-link {
    text-decoration: none;
    color: #666;
    font-weight: 500;
    font-size: 16px;
    transition: color 0.3s ease;
    position: relative;
    padding: 0.5rem 0;
  }

  html.dark .nav-link {
    color: #a0aec0;
  }

  .nav-link:hover {
    color: #667eea;
  }

  html.dark .nav-link:hover {
    color: #a3bffa;
  }

  .nav-link.active {
    color: #667eea;
  }

  html.dark .nav-link.active {
    color: #a3bffa;
  }

  .nav-link.active::after {
    content: '';
    position: absolute;
    bottom: -8px;
    left: 0;
    right: 0;
    height: 2px;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    border-radius: 2px;
  }

  .nav-btn {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    border: none;
    padding: 10px 20px;
    border-radius: 25px;
    font-size: 14px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .nav-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);
  }
</style>
