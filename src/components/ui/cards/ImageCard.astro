---
import CodeViewer from '../../util/CodeViewer.astro';

const code = `
<div class="card-image">
  <img src="https://images.unsplash.com/photo-1519681393784-d120267933ba?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1170&q=80" alt="Montañas nevadas">
  <div class="card-content">
    <h4>Tarjeta con Imagen</h4>
    <p>Una tarjeta que destaca por tener una imagen prominente.</p>
  </div>
</div>

<style>
  .card-image {
    background: var(--card-bg);
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 10px 20px rgba(0,0,0,0.1);
    transition: transform 0.3s ease;
    max-width: 320px;
  }

  .card-image:hover {
    transform: scale(1.03);
  }

  .card-image img {
    width: 100%;
    height: 200px;
    object-fit: cover;
    display: block;
  }

  .card-image .card-content {
    padding: 1.5rem;
  }

  .card-image h4, .card-image p {
    margin: 0;
    color: var(--text-color);
  }
</style>
`;
---

<div class="component-preview">
  <div class="card-image">
    <img src="https://images.unsplash.com/photo-1519681393784-d120267933ba?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1170&q=80" alt="Montañas nevadas">
    <div class="card-content">
      <h4>Tarjeta con Imagen</h4>
      <p>Una tarjeta que destaca por tener una imagen prominente.</p>
    </div>
  </div>
</div>

<CodeViewer code={code} />

<style>
  .component-preview {
    padding: 2rem;
    border: 1px solid var(--border-light);
    border-radius: 8px;
    background: var(--card-bg-light);
    margin: 1rem 0;
    transition: background 0.3s ease, border-color 0.3s ease;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  html.dark .component-preview {
    background: var(--card-bg-dark);
    border-color: var(--border-dark);
  }

  .card-image {
    background: var(--card-bg);
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 10px 20px rgba(0,0,0,0.1);
    transition: transform 0.3s ease;
    max-width: 320px;
  }

  .card-image:hover {
    transform: scale(1.03);
  }

  .card-image img {
    width: 100%;
    height: 200px;
    object-fit: cover;
    display: block;
  }

  .card-image .card-content {
    padding: 1.5rem;
  }

  .card-image h4, .card-image p {
    margin: 0;
    color: var(--text-color);
  }
</style>
