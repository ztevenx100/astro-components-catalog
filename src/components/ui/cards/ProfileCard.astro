---
import CodeViewer from '../../util/CodeViewer.astro';
import '../../../styles/card-base.css';

const code = `
<div class="card-base card-profile">
  <div class="profile-header"></div>
  <img class="profile-avatar" src="https://randomuser.me/api/portraits/women/68.jpg" alt="Avatar de usuario">
  <div class="profile-body">
    <h3>Ana López</h3>
    <p class="profile-role">Diseñadora UX/UI</p>
    <p class="profile-bio">Apasionada por crear interfaces intuitivas y estéticas que resuelvan problemas reales.</p>
    <button class="profile-btn">Contactar</button>
  </div>
</div>

<style>
  .card-profile {
    background: var(--surface-color);
    border-radius: 16px;
    box-shadow: var(--shadow-md);
    text-align: center;
    overflow: hidden;
    position: relative;
    max-width: 300px;
    transition: all var(--transition-normal);
  }

  .card-profile:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
  }

  .profile-header {
    background: linear-gradient(to right, #8e2de2, #4a00e0);
    height: 100px;
  }

  .profile-avatar {
    width: 120px;
    height: 120px;
    border-radius: 50%;
    border: 5px solid var(--surface-color);
    margin-top: -60px;
    position: relative;
    z-index: 1;
    transition: transform var(--transition-normal);
  }

  .card-profile:hover .profile-avatar {
    transform: scale(1.05);
  }

  .profile-role {
    color: #8e2de2;
    font-weight: 600;
  }

  .profile-bio {
    color: var(--text-secondary);
    font-size: 0.9rem;
  }

  .profile-btn {
    margin-top: 1rem;
    background: #8e2de2;
    color: white;
    border: none;
    padding: 10px 25px;
    border-radius: 20px;
    cursor: pointer;
    transition: background 0.3s;
  }

  .profile-btn:hover {
    background: #4a00e0;
  }
</style>
`;
