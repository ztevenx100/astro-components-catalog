<style>
  .card-stats {
    background: var(--surface-color);
    border-radius: 16px;
    padding: 1.5rem;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08), 0 2px 6px rgba(0, 0, 0, 0.04);
    border: 1px solid var(--border-color);
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
    backdrop-filter: blur(10px);
    display: flex;
    align-items: center;
    gap: 1rem;
    width: 100%;
    min-width: 280px;
    max-width: 320px;
  }

  .card-stats::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 4px;
    height: 100%;
    background: linear-gradient(180deg, var(--primary-color), var(--accent-color, var(--primary-color)));
    transform: scaleY(0);
    transform-origin: bottom;
    transition: transform 0.3s ease;
  }

  .card-stats:hover::before {
    transform: scaleY(1);
  }

  .card-stats:hover {
    transform: translateY(-6px) scale(1.02);
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.15), 0 6px 16px rgba(0, 0, 0, 0.08);
  }

  .stats-icon {
    width: 60px;
    height: 60px;
    border-radius: 12px;
    background: linear-gradient(135deg, var(--primary-color), var(--accent-color, var(--primary-color)));
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    transition: transform 0.3s ease;
  }

  .card-stats:hover .stats-icon {
    transform: scale(1.1) rotate(5deg);
  }

  .stats-icon .icon {
    font-size: 1.5rem;
    filter: brightness(0) invert(1);
  }

  .stats-content {
    flex: 1;
    min-width: 0;
  }

  .stats-title {
    margin: 0 0 0.5rem 0;
    color: var(--text-secondary);
    font-size: 0.85rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    transition: color 0.3s ease;
  }

  .card-stats:hover .stats-title {
    color: var(--text-color);
  }

  .stats-value {
    margin: 0 0 0.75rem 0;
    color: var(--text-color);
    font-size: 1.75rem;
    font-weight: 700;
    line-height: 1;
    transition: color 0.3s ease;
  }

  .card-stats:hover .stats-value {
    color: var(--primary-color);
  }

  .stats-change {
    display: flex;
    align-items: center;
    gap: 0.25rem;
    font-size: 0.8rem;
    font-weight: 600;
  }

  .stats-change.positive {
    color: #10b981;
  }

  .stats-change.negative {
    color: #ef4444;
  }

  .change-icon {
    font-size: 1rem;
    transition: transform 0.3s ease;
  }

  .card-stats:hover .change-icon {
    transform: scale(1.2);
  }

  /* Variante negativa */
  .card-stats.negative .stats-icon {
    background: linear-gradient(135deg, #ef4444, #dc2626);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .card-stats {
      max-width: 320px;
      min-width: 0;
      padding: 1.25rem;
      flex-direction: row;
      gap: 0.75rem;
    }

    .stats-icon {
      width: 50px;
      height: 50px;
      flex-shrink: 0;
    }

    .stats-icon .icon {
      font-size: 1.25rem;
    }

    .stats-value {
      font-size: 1.5rem;
    }
  }
</style>
`;
