    font-size: 0.95rem;
    margin-bottom: 0.5rem;
  }

  .card-product:hover .product-title {
    color: var(--primary-color);
  }

  .product-description {
    margin: 0 0 1rem 0;
    color: var(--text-secondary);
    font-size: 0.85rem;
    line-height: 1.6;
  }

  .card-product.compact .product-description {
    display: none;
  }

  .product-rating {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 1rem;
  }

  .card-product.compact .product-rating {
    margin-bottom: 0.75rem;
  }

  .stars {
    color: #fbbf24;
    font-size: 0.9rem;
    line-height: 1;
  }

  .rating-count {
    color: var(--text-secondary);
    font-size: 0.75rem;
  }

  .product-pricing {
