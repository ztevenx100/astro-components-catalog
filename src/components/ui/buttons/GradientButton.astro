---
import CodeViewer from '../../util/CodeViewer.astro';

const code = `
<button class="gradient-button">
  <span class="button-text">Botón Gradiente</span>
  <div class="gradient-overlay"></div>
</button>

<style>
  .gradient-button {
    position: relative;
    padding: 14px 32px;
    border: none;
    border-radius: 50px;
    background: linear-gradient(135deg, var(--primary-color) 0%, var(--accent-color, #8b5cf6) 100%);
    color: white;
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    overflow: hidden;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 0 4px 15px rgba(var(--primary-color-rgb, 59, 130, 246), 0.3);
    text-transform: capitalize;
    letter-spacing: 0.025em;
    min-width: 150px;
  }

  .gradient-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(var(--primary-color-rgb, 59, 130, 246), 0.4);
  }

  .gradient-button:active {
    transform: translateY(0);
  }

  .button-text {
    position: relative;
    z-index: 2;
    transition: transform 0.3s ease;
  }

  .gradient-overlay {
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
    transition: left 0.6s ease;
    z-index: 1;
  }

  .gradient-button:hover .gradient-overlay {
    left: 100%;
  }

  .gradient-button:hover .button-text {
    transform: scale(1.05);
  }

  .gradient-button:focus {
    outline: none;
    box-shadow: 0 0 0 3px rgba(var(--primary-color-rgb, 59, 130, 246), 0.3),
                0 8px 25px rgba(var(--primary-color-rgb, 59, 130, 246), 0.4);
  }

  .gradient-button:disabled {
    opacity: 0.6;
    cursor: not-allowed;
    transform: none;
    box-shadow: 0 2px 8px rgba(var(--primary-color-rgb, 59, 130, 246), 0.2);
  }

  .gradient-button:disabled:hover {
    transform: none;
  }

  /* Variantes de color */
  .gradient-button.success {
    background: linear-gradient(135deg, #10b981 0%, #059669 100%);
    box-shadow: 0 4px 15px rgba(16, 185, 129, 0.3);
  }

  .gradient-button.success:hover {
    box-shadow: 0 8px 25px rgba(16, 185, 129, 0.4);
  }

  .gradient-button.danger {
    background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
    box-shadow: 0 4px 15px rgba(239, 68, 68, 0.3);
  }

  .gradient-button.danger:hover {
    box-shadow: 0 8px 25px rgba(239, 68, 68, 0.4);
  }

  .gradient-button.warning {
    background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
    box-shadow: 0 4px 15px rgba(245, 158, 11, 0.3);
  }

  .gradient-button.warning:hover {
    box-shadow: 0 8px 25px rgba(245, 158, 11, 0.4);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .gradient-button {
      padding: 12px 24px;
      font-size: 0.9rem;
      min-width: 120px;
    }
  }
</style>
`;
