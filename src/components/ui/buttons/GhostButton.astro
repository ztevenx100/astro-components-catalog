---
import CodeViewer from '../../util/CodeViewer.astro';

const code = `
<button class="btn-ghost">
  Botón Fantasma
</button>

<style>
  .btn-ghost {
    background: transparent;
    border: 2px solid #667eea;
    color: #667eea;
    padding: 10px 22px;
    font-size: 16px;
    font-weight: 600;
    border-radius: 8px;
    cursor: pointer;
    transition: all 0.3s ease;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    position: relative;
    overflow: hidden;
  }

  .btn-ghost:before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    transition: left 0.3s ease;
    z-index: -1;
  }

  .btn-ghost:hover {
    color: white;
    border-color: #667eea;
  }

  .btn-ghost:hover:before {
    left: 0;
  }
</style>
`;
---

