---
import CodeViewer from '../../util/CodeViewer.astro';

const code = `
<button class="btn-ghost">
  Botón Fantasma
</button>

<style>
  .btn-ghost {
    background-color: transparent;
    color: var(--text-color);
    border: 2px solid var(--border-color);
    padding: 8px 18px;
    border-radius: 5px;
    cursor: pointer;
    font-size: 1rem;
    transition: all 0.3s ease;
  }

  .btn-ghost:hover {
    background-color: var(--border-color);
    color: var(--bg-color);
  }
</style>
`;
---

<div class="component-preview">
  <button class="btn-ghost">
    Botón Fantasma
  </button>
</div>

<CodeViewer code={code} />

<style>
  .component-preview {
    padding: 2rem;
    border: 1px solid var(--border-light);
    border-radius: 8px;
    background: var(--card-bg-light);
    margin: 1rem 0;
    transition: background 0.3s ease, border-color 0.3s ease;
  }

  html.dark .component-preview {
    background: var(--card-bg-dark);
    border-color: var(--border-dark);
  }

  .component-preview h3 {
    margin: 0 0 1rem 0;
    color: #333;
    font-size: 1.2rem;
    font-weight: 600;
  }

  html.dark .component-preview h3 {
    color: var(--header-text-dark);
  }

  .button-showcase {
    padding: 2rem;
    border: 1px solid var(--border-light);
    border-radius: 8px;
    background: var(--card-bg-light);
    margin: 1rem 0;
    transition: background 0.3s ease, border-color 0.3s ease;
  }

  html.dark .button-showcase {
    background: var(--card-bg-dark);
    border-color: var(--border-dark);
  }

  .button-showcase h3 {
    margin: 0 0 1rem 0;
    color: #333;
    font-size: 1.2rem;
    font-weight: 600;
  }

  html.dark .button-showcase h3 {
    color: var(--header-text-dark);
  }

  .btn-ghost {
    background: transparent;
    border: 2px solid #667eea;
    color: #667eea;
    padding: 10px 22px;
    font-size: 16px;
    font-weight: 600;
    border-radius: 8px;
    cursor: pointer;
    transition: all 0.3s ease;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    position: relative;
    overflow: hidden;
  }

  .btn-ghost:before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    transition: left 0.3s ease;
    z-index: -1;
  }

  .btn-ghost:hover {
    color: white;
    border-color: #667eea;
  }

  .btn-ghost:hover:before {
    left: 0;
  }
</style>
