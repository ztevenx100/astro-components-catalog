---
import CodeViewer from '../../util/CodeViewer.astro';

const code = `
<!-- Botones con Iconos usando el Sistema Unificado -->
<button class="btn btn-primary">
  <span class="btn-icon">📧</span>
  Enviar Email
</button>

<button class="btn btn-outline-success">
  <span class="btn-icon">✓</span>
  Confirmar
</button>

<button class="btn btn-danger btn-icon-right">
  Eliminar
  <span class="btn-icon">🗑️</span>
</button>

<!-- Botones solo con icono -->
<button class="btn btn-primary btn-icon-only" aria-label="Configuración">
  <span class="btn-icon">⚙️</span>
</button>

<button class="btn btn-outline-info btn-icon-only btn-lg" aria-label="Información">
  <span class="btn-icon">ℹ️</span>
</button>

<!-- Con iconos animados -->
<button class="btn btn-success btn-icon-animated">
  <span class="btn-icon">❤️</span>
  Me Gusta
</button>

<style>
  /* Extensiones para iconos del sistema base */
  .btn-icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    font-size: 1.1em;
    transition: transform 0.3s ease;
  }

  .btn:hover .btn-icon {
    transform: scale(1.1);
  }

  .btn-icon-right {
    flex-direction: row-reverse;
  }

  .btn-icon-only {
    padding: 10px;
    min-width: 44px;
    aspect-ratio: 1;
  }

  .btn-icon-only.btn-sm {
    padding: 6px;
    min-width: 36px;
  }

  .btn-icon-only.btn-lg {
    padding: 14px;
    min-width: 52px;
  }

  .btn-icon-animated .btn-icon {
    animation: heartbeat 1.5s ease-in-out infinite;
  }

  @keyframes heartbeat {
    0% { transform: scale(1); }
    50% { transform: scale(1.2); }
    100% { transform: scale(1); }
  }

  /* Estados especiales para iconos */
  .btn:active .btn-icon {
    transform: scale(0.95);
  }

  .btn-loading .btn-icon {
    opacity: 0.3;
  }
</style>
`;
---

<div class="component-preview">
  <h3>🎯 Botones con Iconos Sistemático</h3>
  <p>Sistema de iconos integrado con el sistema base de botones, incluyendo posicionamiento y animaciones.</p>
  
  <div class="demo-container">
    <div class="icon-group">
      <h4>📍 Posición de Iconos</h4>
      <div class="icon-showcase">
        <button class="btn btn-primary">
          <span class="btn-icon">📧</span>
          Icono Izquierda
        </button>
        <button class="btn btn-success btn-icon-right">
          Icono Derecha
          <span class="btn-icon">→</span>
        </button>
        <button class="btn btn-warning">
          <span class="btn-icon">⚠️</span>
          Ambos Lados
          <span class="btn-icon">⚠️</span>
        </button>
      </div>
    </div>

    <div class="icon-group">
      <h4>🎯 Solo Iconos</h4>
      <div class="icon-showcase">
        <button class="btn btn-primary btn-icon-only btn-sm" aria-label="Editar">
          <span class="btn-icon">✏️</span>
        </button>
        <button class="btn btn-danger btn-icon-only" aria-label="Eliminar">
          <span class="btn-icon">🗑️</span>
        </button>
        <button class="btn btn-success btn-icon-only btn-lg" aria-label="Aprobar">
          <span class="btn-icon">✓</span>
        </button>
      </div>
    </div>

    <div class="icon-group">
      <h4>🔲 Variantes Outline con Iconos</h4>
      <div class="icon-showcase">
        <button class="btn btn-outline-primary">
          <span class="btn-icon">🔍</span>
          Buscar
        </button>
        <button class="btn btn-outline-info">
          <span class="btn-icon">ℹ️</span>
          Información
        </button>
        <button class="btn btn-outline-warning">
          <span class="btn-icon">⚠️</span>
          Advertencia
        </button>
      </div>
    </div>

    <div class="icon-group">
      <h4>✨ Iconos Animados</h4>
      <div class="icon-showcase">
        <button class="btn btn-danger btn-icon-animated">
          <span class="btn-icon">❤️</span>
          Me Gusta
        </button>
        <button class="btn btn-primary btn-loading">
          <span class="btn-spinner"></span>
          <span class="btn-icon">💾</span>
          Guardando...
        </button>
        <button class="btn btn-success" disabled>
          <span class="btn-icon">✓</span>
          Completado
        </button>
      </div>
    </div>

    <div class="icon-group">
      <h4>📱 Casos de Uso Comunes</h4>
      <div class="icon-showcase full-width">
        <div class="use-case-row">
          <button class="btn btn-primary">
            <span class="btn-icon">🚀</span>
            Lanzar Proyecto
          </button>
          <button class="btn btn-outline-secondary">
            <span class="btn-icon">📝</span>
            Editar
          </button>
          <button class="btn btn-outline-danger btn-sm">
            <span class="btn-icon">🗑️</span>
            Eliminar
          </button>
        </div>
        <div class="use-case-row">
          <button class="btn btn-success btn-block">
            <span class="btn-icon">💳</span>
            Procesar Pago
          </button>
        </div>
      </div>
    </div>
  </div>
</div>

<CodeViewer code={code} />

