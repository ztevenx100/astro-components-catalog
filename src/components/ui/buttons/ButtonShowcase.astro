---
import CodeViewer from '../../util/CodeViewer.astro';

const code = `
<!-- ✨ SISTEMA COMPLETO DE BOTONES - SHOWCASE ✨ -->

<!-- SECCIÓN 1: Básicos -->
<section class="button-showcase-section">
  <h2>🎨 Variantes de Color</h2>
  <div class="button-grid">
    <button class="btn btn-primary">Primario</button>
    <button class="btn btn-secondary">Secundario</button>
    <button class="btn btn-success">Éxito</button>
    <button class="btn btn-danger">Peligro</button>
    <button class="btn btn-warning">Advertencia</button>
    <button class="btn btn-info">Información</button>
  </div>
</section>

<!-- SECCIÓN 2: Tamaños -->
<section class="button-showcase-section">
  <h2>📏 Variantes de Tamaño</h2>
  <div class="button-grid">
    <button class="btn btn-primary btn-sm">Pequeño</button>
    <button class="btn btn-primary btn-md">Mediano</button>
    <button class="btn btn-primary btn-lg">Grande</button>
  </div>
</section>

<!-- SECCIÓN 3: Outline -->
<section class="button-showcase-section">
  <h2>🔲 Variantes Outline</h2>
  <div class="button-grid">
    <button class="btn btn-outline-primary">Outline Primario</button>
    <button class="btn btn-outline-success">Outline Éxito</button>
    <button class="btn btn-outline-danger">Outline Peligro</button>
  </div>
</section>

<!-- SECCIÓN 4: Estados -->
<section class="button-showcase-section">
  <h2>🚫 Estados y Interacciones</h2>
  <div class="button-grid">
    <button class="btn btn-primary" disabled>Deshabilitado</button>
    <button class="btn btn-secondary btn-loading">
      <span class="btn-spinner"></span>
      Cargando...
    </button>
    <button class="btn btn-success">
      <span class="btn-icon">✓</span>
      Con Icono
    </button>
  </div>
</section>

<!-- SECCIÓN 5: Gradientes -->
<section class="button-showcase-section">
  <h2>🌈 Efectos de Gradiente</h2>
  <div class="button-grid">
    <button class="btn btn-gradient-primary">Gradiente Primario</button>
    <button class="btn btn-gradient-rainbow">Arcoíris</button>
    <button class="btn btn-gradient-sunset">Atardecer</button>
    <button class="btn btn-gradient-ocean">Océano</button>
  </div>
</section>

<!-- SECCIÓN 6: Aplicaciones Reales -->
<section class="button-showcase-section">
  <h2>🎯 Casos de Uso Reales</h2>
  
  <!-- Toolbar -->
  <div class="toolbar-example">
    <button class="btn btn-primary btn-sm">
      <span class="btn-icon">💾</span>
      Guardar
    </button>
    <button class="btn btn-outline-secondary btn-sm">
      <span class="btn-icon">📤</span>
      Exportar
    </button>
    <button class="btn btn-outline-danger btn-sm">
      <span class="btn-icon">🗑️</span>
      Eliminar
    </button>
  </div>
  
  <!-- Call to Action -->
  <div class="cta-example">
    <button class="btn btn-gradient-primary btn-lg btn-animated">
      <span class="btn-icon">🚀</span>
      Comenzar Ahora
    </button>
  </div>
  
  <!-- Form Actions -->
  <div class="form-actions-example">
    <button class="btn btn-success">
      <span class="btn-icon">✓</span>
      Confirmar
    </button>
    <button class="btn btn-outline-secondary">Cancelar</button>
  </div>
</section>

<!-- SECCIÓN 7: Bloque -->
<section class="button-showcase-section">
  <h2>📱 Botones de Bloque</h2>
  <button class="btn btn-primary btn-block">
    <span class="btn-icon">📱</span>
    Botón de Ancho Completo
  </button>
  <button class="btn btn-outline-success btn-block">
    <span class="btn-icon">💳</span>
    Procesar Pago
  </button>
</section>

<style>
  .button-showcase-section {
    margin-bottom: 2rem;
    padding: 1.5rem;
    background: var(--surface-color);
    border-radius: 12px;
    border: 1px solid var(--border-color);
  }

  .button-showcase-section h2 {
    margin: 0 0 1rem 0;
    color: var(--text-color);
    font-size: 1.25rem;
    font-weight: 600;
    text-align: center;
  }

  .button-grid {
    display: flex;
    gap: 0.75rem;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
  }

  .toolbar-example {
    display: flex;
    gap: 0.5rem;
    justify-content: center;
    margin-bottom: 1rem;
    padding: 0.75rem;
    background: var(--background-color);
    border-radius: 8px;
    border: 1px solid var(--border-color);
  }

  .cta-example {
    text-align: center;
    margin: 1.5rem 0;
  }

  .form-actions-example {
    display: flex;
    gap: 0.75rem;
    justify-content: center;
  }

  @media (max-width: 768px) {
    .button-grid {
      flex-direction: column;
      align-items: stretch;
    }

    .toolbar-example {
      flex-direction: column;
    }

    .form-actions-example {
      flex-direction: column;
    }
  }
</style>
`;
