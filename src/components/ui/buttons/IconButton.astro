  .icon-button.success {
    border-color: #10b981;
    color: #10b981;
  }

  .icon-button.success:hover {
    background: #10b981;
    color: white;
    box-shadow: 0 6px 20px rgba(16, 185, 129, 0.3);
  }

  .icon-button.danger {
    border-color: #ef4444;
    color: #ef4444;
  }

  .icon-button.danger:hover {
    background: #ef4444;
    color: white;
    box-shadow: 0 6px 20px rgba(239, 68, 68, 0.3);
  }

  .icon-button.warning {
    border-color: #f59e0b;
    color: #f59e0b;
  }

  .icon-button.warning:hover {
    background: #f59e0b;
    color: white;
    box-shadow: 0 6px 20px rgba(245, 158, 11, 0.3);
  }

  /* Estados de interacciÃ³n */
  .icon-button:focus {
    outline: none;
    box-shadow: 0 0 0 3px rgba(var(--primary-color-rgb, 59, 130, 246), 0.3);
  }

  .icon-button:disabled {
    opacity: 0.5;
    cursor: not-allowed;
    transform: none;
  }

  .icon-button:disabled:hover {
    background: transparent;
    color: var(--primary-color);
    transform: none;
    box-shadow: none;
  }

  /* AnimaciÃ³n de carga */
  .icon-button.loading .icon {
    animation: spin 1s linear infinite;
  }

  @keyframes spin {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }

  /* Responsive */
  @media (max-width: 768px) {
    .icon-button {
      padding: 10px 20px;
      font-size: 0.9rem;
      min-height: 44px;
    }

    .icon-button.icon-only {
      min-width: 44px;
      min-height: 44px;
      padding: 10px;
    }
  }
</style>
`;
