const code = `
<button class="fab-button">
  <span class="fab-icon">+</span>
</button>

<button class="fab-button fab-extended">
  <span class="fab-icon">‚úâ</span>
  <span class="fab-text">Nuevo Mensaje</span>
</button>

<div class="fab-menu">
  <button class="fab-button fab-main">
    <span class="fab-icon">‚öô</span>
  </button>
  <div class="fab-options">
    <button class="fab-button fab-option">
      <span class="fab-icon">üìÅ</span>
    </button>
    <button class="fab-button fab-option">
      <span class="fab-icon">üì∑</span>
    </button>
    <button class="fab-button fab-option">
      <span class="fab-icon">üìù</span>
    </button>
  </div>
</div>

<style>
  .fab-button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    width: 56px;
    height: 56px;
    border: none;
    border-radius: 50%;
    background: var(--primary-color);
    color: white;
    font-size: 1.2rem;
    font-weight: 600;
    cursor: pointer;
    box-shadow: 0 6px 20px rgba(var(--primary-color-rgb, 59, 130, 246), 0.4);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
  }

  .fab-button:hover {
    transform: scale(1.1);
    box-shadow: 0 8px 28px rgba(var(--primary-color-rgb, 59, 130, 246), 0.5);
  }

  .fab-button:active {
    transform: scale(0.95);
  }

  .fab-icon {
    font-size: 1.4rem;
    transition: transform 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .fab-button:hover .fab-icon {
    transform: rotate(90deg);
  }

  /* Versi√≥n extendida con texto */
  .fab-button.fab-extended {
    width: auto;
    min-width: 56px;
    height: 48px;
    border-radius: 24px;
    padding: 0 16px;
    gap: 0.5rem;
  }

  .fab-text {
    font-size: 0.9rem;
    font-weight: 500;
    white-space: nowrap;
    opacity: 0;
    max-width: 0;
    transition: all 0.3s ease;
    overflow: hidden;
  }

  .fab-button.fab-extended:hover .fab-text {
    opacity: 1;
    max-width: 150px;
  }

  .fab-button.fab-extended .fab-icon {
    font-size: 1.2rem;
  }

  .fab-button.fab-extended:hover .fab-icon {
    transform: scale(1.1);
  }

  /* Men√∫ FAB expandible */
  .fab-menu {
    position: relative;
    display: inline-block;
  }

  .fab-options {
    position: absolute;
    bottom: 70px;
    right: 0;
    display: flex;
    flex-direction: column;
    gap: 12px;
    opacity: 0;
    visibility: hidden;
    transform: translateY(20px);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .fab-menu:hover .fab-options {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
  }

  .fab-option {
    width: 48px;
    height: 48px;
    font-size: 1.1rem;
    box-shadow: 0 4px 16px rgba(var(--primary-color-rgb, 59, 130, 246), 0.3);
    animation: slideInUp 0.3s ease-out forwards;
  }

  .fab-option:nth-child(1) {
    animation-delay: 0.1s;
  }

  .fab-option:nth-child(2) {
    animation-delay: 0.2s;
  }

  .fab-option:nth-child(3) {
    animation-delay: 0.3s;
  }

  .fab-main .fab-icon {
    transition: transform 0.3s ease;
  }

  .fab-menu:hover .fab-main .fab-icon {
    transform: rotate(45deg);
  }

  @keyframes slideInUp {
    from {
      opacity: 0;
      transform: translateY(10px) scale(0.8);
    }
    to {
      opacity: 1;
      transform: translateY(0) scale(1);
    }
  }

  /* Variantes de color */
  .fab-button.success {
    background: #10b981;
    box-shadow: 0 6px 20px rgba(16, 185, 129, 0.4);
  }

  .fab-button.success:hover {
    box-shadow: 0 8px 28px rgba(16, 185, 129, 0.5);
  }

  .fab-button.danger {
    background: #ef4444;
    box-shadow: 0 6px 20px rgba(239, 68, 68, 0.4);
  }

  .fab-button.danger:hover {
    box-shadow: 0 8px 28px rgba(239, 68, 68, 0.5);
  }

  .fab-button.warning {
    background: #f59e0b;
    box-shadow: 0 6px 20px rgba(245, 158, 11, 0.4);
  }

  .fab-button.warning:hover {
    box-shadow: 0 8px 28px rgba(245, 158, 11, 0.5);
  }

  .fab-button.dark {
    background: #374151;
    box-shadow: 0 6px 20px rgba(55, 65, 81, 0.4);
  }

  .fab-button.dark:hover {
    box-shadow: 0 8px 28px rgba(55, 65, 81, 0.5);
  }

  /* Estados de focus */
  .fab-button:focus {
    outline: none;
    box-shadow: 0 0 0 3px rgba(var(--primary-color-rgb, 59, 130, 246), 0.3),
                0 6px 20px rgba(var(--primary-color-rgb, 59, 130, 246), 0.4);
  }

  /* Efecto de ondas (ripple) */
  .fab-button::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 0;
    height: 0;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.3);
    transform: translate(-50%, -50%);
    transition: width 0.3s, height 0.3s;
  }

  .fab-button:active::before {
    width: 60px;
    height: 60px;
  }

  /* Estados deshabilitado */
  .fab-button:disabled {
    opacity: 0.5;
    cursor: not-allowed;
    transform: none;
    box-shadow: 0 2px 8px rgba(var(--primary-color-rgb, 59, 130, 246), 0.2);
  }

  .fab-button:disabled:hover {
    transform: none;
    box-shadow: 0 2px 8px rgba(var(--primary-color-rgb, 59, 130, 246), 0.2);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .fab-button {
      width: 52px;
      height: 52px;
    }

    .fab-button.fab-extended {
      height: 44px;
      padding: 0 14px;
    }

    .fab-option {
      width: 44px;
      height: 44px;
    }

    .fab-options {
      bottom: 60px;
    }
  }

  /* Posicionamiento fijo para uso real */
  .fab-fixed {
    position: fixed;
    bottom: 20px;
    right: 20px;
    z-index: 1000;
  }

  /* Animaciones de pulsaci√≥n */
  .fab-button.pulse {
    animation: pulse 2s infinite;
  }

  @keyframes pulse {
    0% {
      box-shadow: 0 6px 20px rgba(var(--primary-color-rgb, 59, 130, 246), 0.4);
    }
    50% {
      box-shadow: 0 6px 20px rgba(var(--primary-color-rgb, 59, 130, 246), 0.6),
                  0 0 0 10px rgba(var(--primary-color-rgb, 59, 130, 246), 0.1);
    }
    100% {
      box-shadow: 0 6px 20px rgba(var(--primary-color-rgb, 59, 130, 246), 0.4);
    }
  }
</style>
`;
