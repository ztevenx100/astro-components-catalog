<style>
  .fab-button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    width: 56px;
    height: 56px;
    border: none;
    border-radius: 50%;
    background: var(--primary-color);
    color: white;
    font-size: 1.2rem;
    font-weight: 600;
    cursor: pointer;
    box-shadow: 0 6px 20px rgba(var(--primary-color-rgb, 59, 130, 246), 0.4);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
  }

  .fab-button:hover {
    transform: scale(1.1);
    box-shadow: 0 8px 28px rgba(var(--primary-color-rgb, 59, 130, 246), 0.5);
  }

  .fab-button:active {
    transform: scale(0.95);
  }

  .fab-icon {
    font-size: 1.4rem;
    transition: transform 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .fab-button:hover .fab-icon {
    transform: rotate(90deg);
  }

  /* Versi√≥n extendida con texto */
  .fab-button.fab-extended {
    width: auto;
    min-width: 56px;
    height: 48px;
    border-radius: 24px;
    padding: 0 16px;
    gap: 0.5rem;
  }

  .fab-text {
    font-size: 0.9rem;
    font-weight: 500;
    white-space: nowrap;
    opacity: 0;
    max-width: 0;
    transition: all 0.3s ease;
    overflow: hidden;
  }

  .fab-button.fab-extended:hover .fab-text {
    opacity: 1;
    max-width: 150px;
  }

  .fab-button.fab-extended .fab-icon {
    font-size: 1.2rem;
  }

  .fab-button.fab-extended:hover .fab-icon {
    transform: scale(1.1);
  }

  /* Men√∫ FAB expandible */
  .fab-menu {
    position: relative;
    display: inline-block;
  }

  .fab-options {
    position: absolute;
    bottom: 70px;
    right: 0;
    display: flex;
    flex-direction: column;
    gap: 12px;
    opacity: 0;
    visibility: hidden;
    transform: translateY(20px);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .fab-menu:hover .fab-options {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
  }

  .fab-option {
    width: 48px;
    height: 48px;
    font-size: 1.1rem;
    box-shadow: 0 4px 16px rgba(var(--primary-color-rgb, 59, 130, 246), 0.3);
    animation: slideInUp 0.3s ease-out forwards;
  }

  .fab-option:nth-child(1) {
    animation-delay: 0.1s;
  }

  .fab-option:nth-child(2) {
    animation-delay: 0.2s;
  }

  .fab-option:nth-child(3) {
    animation-delay: 0.3s;
  }

  .fab-main .fab-icon {
    transition: transform 0.3s ease;
  }

  .fab-menu:hover .fab-main .fab-icon {
    transform: rotate(45deg);
  }

  @keyframes slideInUp {
    from {
      opacity: 0;
      transform: translateY(10px) scale(0.8);
    }
    to {
      opacity: 1;
      transform: translateY(0) scale(1);
    }
  }

  /* Variantes de color */
  .fab-button.success {
    background: #10b981;
    box-shadow: 0 6px 20px rgba(16, 185, 129, 0.4);
  }

  .fab-button.success:hover {
    box-shadow: 0 8px 28px rgba(16, 185, 129, 0.5);
  }

  .fab-button.danger {
    background: #ef4444;
    box-shadow: 0 6px 20px rgba(239, 68, 68, 0.4);
  }

  .fab-button.danger:hover {
    box-shadow: 0 8px 28px rgba(239, 68, 68, 0.5);
  }

  .fab-button.warning {
    background: #f59e0b;
