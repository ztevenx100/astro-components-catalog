---
import CodeViewer from '../../util/CodeViewer.astro';

const code = `
<button class="btn-neomorphic">
  Neomórfico
</button>

<style>
  .btn-neomorphic {
    background: var(--bg-color);
    border: none;
    color: var(--text-color);
    padding: 15px 30px;
    font-size: 16px;
    font-weight: 600;
    border-radius: 20px;
    cursor: pointer;
    transition: all var(--transition-normal);
    box-shadow: 
      8px 8px 16px rgba(0, 0, 0, 0.1),
      -8px -8px 16px rgba(255, 255, 255, 0.8);
    position: relative;
  }

  .btn-neomorphic:hover {
    box-shadow: 
      4px 4px 8px rgba(0, 0, 0, 0.15),
      -4px -4px 8px rgba(255, 255, 255, 0.9);
    transform: translateY(2px);
  }

  .btn-neomorphic:active {
    box-shadow: 
      inset 4px 4px 8px rgba(0, 0, 0, 0.15),
      inset -4px -4px 8px rgba(255, 255, 255, 0.9);
    transform: translateY(4px);
  }

  .btn-neomorphic:focus-visible {
    outline: 2px solid var(--primary-color);
    outline-offset: 2px;
  }

  /* Ajustes para modo oscuro */
  html.dark .btn-neomorphic {
    box-shadow: 
      8px 8px 16px rgba(0, 0, 0, 0.5),
      -8px -8px 16px rgba(255, 255, 255, 0.05);
  }

  html.dark .btn-neomorphic:hover {
    box-shadow: 
      4px 4px 8px rgba(0, 0, 0, 0.6),
      -4px -4px 8px rgba(255, 255, 255, 0.08);
  }

  html.dark .btn-neomorphic:active {
    box-shadow: 
      inset 4px 4px 8px rgba(0, 0, 0, 0.6),
      inset -4px -4px 8px rgba(255, 255, 255, 0.08);
  }
</style>
`;
