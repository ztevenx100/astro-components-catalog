---
import CodeViewer from '../../util/CodeViewer.astro';

const code = `
<button class="btn-neomorphic">
  Neomórfico
</button>

<style>
  .btn-neomorphic {
    background: var(--neo-bg);
    border: none;
    color: var(--neo-text);
    padding: 15px 30px;
    font-size: 16px;
    font-weight: 600;
    border-radius: 20px;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: 
      8px 8px 16px var(--neo-shadow-dark-val),
      -8px -8px 16px var(--neo-shadow-light-val);
    position: relative;
  }

  .btn-neomorphic:hover {
    box-shadow: 
      4px 4px 8px var(--neo-shadow-dark-val),
      -4px -4px 8px var(--neo-shadow-light-val);
    transform: translateY(2px);
  }

  .btn-neomorphic:active {
    box-shadow: 
      inset 4px 4px 8px var(--neo-shadow-dark-val),
      inset -4px -4px 8px var(--neo-shadow-light-val);
    transform: translateY(4px);
  }
</style>
`;
---

<div class="component-preview">
  <button class="btn-neomorphic">Neomórfico</button>
</div>

<CodeViewer code={code} />

<style>
  .component-preview {
    padding: 2rem;
    border: 1px solid var(--border-light);
    border-radius: 8px;
    background: var(--card-bg-light);
    margin: 1rem 0;
    transition: background 0.3s ease, border-color 0.3s ease;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  html.dark .component-preview {
    background: var(--card-bg-dark);
    border-color: var(--border-dark);
  }

  .btn-neomorphic {
    background: var(--neo-bg);
    border: none;
    color: var(--neo-text);
    padding: 15px 30px;
    font-size: 16px;
    font-weight: 600;
    border-radius: 20px;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: 
      8px 8px 16px var(--neo-shadow-dark-val),
      -8px -8px 16px var(--neo-shadow-light-val);
    position: relative;
  }

  .btn-neomorphic:hover {
    box-shadow: 
      4px 4px 8px var(--neo-shadow-dark-val),
      -4px -4px 8px var(--neo-shadow-light-val);
    transform: translateY(2px);
  }

  .btn-neomorphic:active {
    box-shadow: 
      inset 4px 4px 8px var(--neo-shadow-dark-val),
      inset -4px -4px 8px var(--neo-shadow-light-val);
    transform: translateY(4px);
  }
</style>
