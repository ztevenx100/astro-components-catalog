  .btn-neomorphic {
    background: var(--surface-color, #f1f5f9);
    border: none;
    border-radius: 16px;
    color: #374151;
    box-shadow: 
      8px 8px 16px rgba(0, 0, 0, 0.1),
      -8px -8px 16px rgba(255, 255, 255, 0.8);
  }

  .btn-neomorphic:hover:not(:disabled) {
    transform: translateY(-1px);
    box-shadow: 
      6px 6px 12px rgba(0, 0, 0, 0.15),
      -6px -6px 12px rgba(255, 255, 255, 0.9);
  }

  .btn-neomorphic:active {
    transform: translateY(1px);
    box-shadow: 
      inset 4px 4px 8px rgba(0, 0, 0, 0.15),
      inset -4px -4px 8px rgba(255, 255, 255, 0.9);
  }

  .btn-neomorphic.btn-primary {
    background: linear-gradient(145deg, #4f94ff, #3b82f6);
    color: white;
    box-shadow: 
      8px 8px 16px rgba(59, 130, 246, 0.2),
      -8px -8px 16px rgba(79, 148, 255, 0.2);
  }

  .btn-neomorphic.btn-success {
    background: linear-gradient(145deg, #34d399, #10b981);
    color: white;
    box-shadow: 
      8px 8px 16px rgba(16, 185, 129, 0.2),
      -8px -8px 16px rgba(52, 211, 153, 0.2);
  }

  .btn-neomorphic.btn-danger {
    background: linear-gradient(145deg, #f87171, #ef4444);
    color: white;
    box-shadow: 
      8px 8px 16px rgba(239, 68, 68, 0.2),
      -8px -8px 16px rgba(248, 113, 113, 0.2);
  }

  /* ===== ESTADO DESHABILITADO ===== */
  .btn:disabled,
  .btn[aria-disabled="true"] {
    opacity: 0.6;
    cursor: not-allowed;
    pointer-events: none;
    transform: none !important;
    box-shadow: none !important;
    filter: grayscale(20%);
  }

  /* Asegurar que los estados hover no se apliquen a botones deshabilitados */
  .btn:disabled:hover,
  .btn[aria-disabled="true"]:hover {
    transform: none !important;
    box-shadow: none !important;
  }

  /* ===== BOTÓN DE BLOQUE ===== */
  .btn-block {
    display: flex;
    width: 100%;
    justify-content: center;
  }

  /* Asegurar que los botones de bloque se mantengan centrados incluso con iconos */
  .btn-block .btn-icon {
    margin-right: auto;
    margin-left: 0;
  }

  .btn-block .btn-icon + * {
    margin-left: auto;
    margin-right: auto;
  }

  /* ===== ESTADO DE CARGA ===== */
  .btn-loading {
    position: relative;
    pointer-events: none;
  }

  .btn-loading .btn-spinner {
    display: inline-block;
    width: 16px;
    height: 16px;
    border: 2px solid transparent;
    border-top: 2px solid currentColor;
    border-radius: 50%;
    animation: btn-spin 1s linear infinite;
  }

  @keyframes btn-spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
  }

  /* ===== ICONOS ===== */
  .btn-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.1em;
  }

  /* ===== RESPONSIVE ===== */
  @media (max-width: 768px) {
    .btn {
      padding: 8px 16px;
      font-size: 0.9rem;
      min-height: 40px;
    }

    .btn-sm {
      padding: 6px 12px;
      font-size: 0.8rem;
      min-height: 32px;
    }

    .btn-lg {
      padding: 12px 24px;
      font-size: 1rem;
      min-height: 48px;
    }
  }

  /* ===== ACCESIBILIDAD ===== */
  @media (prefers-reduced-motion: reduce) {
    .btn {
      transition: none;
    }
    
    .btn-spinner {
      animation: none;
    }

    .btn:hover:not(:disabled) {
      transform: none;
    }

    .btn:active {
      transform: none;
    }
  }

  /* Soporte para alto contraste */
  @media (prefers-contrast: high) {
    .btn {
      border-width: 3px;
    }

    .btn:focus {
      outline: 3px solid;
      outline-offset: 2px;
    }
  }

  /* Mejorar la legibilidad para usuarios con discapacidades visuales */
  .btn:focus-visible {
    outline: 2px solid currentColor;
    outline-offset: 2px;
  }

  /* ===== MODO OSCURO ===== */
  @media (prefers-color-scheme: dark) {
    /* Mejorar contraste para botones secundarios en modo oscuro */
    .btn-secondary {
      background: #374151;
      border-color: #374151;
    }

    .btn-secondary:hover:not(:disabled) {
      background: #4b5563;
      border-color: #4b5563;
    }

    .btn-outline-secondary {
      color: #9ca3af;
      border-color: #6b7280;
    }

    .btn-outline-secondary:hover:not(:disabled) {
      background: #374151;
      color: white;
      border-color: #374151;
    }

    /* Ajustes neomórficos para modo oscuro */
    .btn-neomorphic {
      background: var(--surface-color-dark, #2d3748);
      box-shadow: 
        8px 8px 16px rgba(0, 0, 0, 0.5),
        -8px -8px 16px rgba(255, 255, 255, 0.05);
    }

    .btn-neomorphic:hover:not(:disabled) {
      box-shadow: 
        4px 4px 8px rgba(0, 0, 0, 0.6),
        -4px -4px 8px rgba(255, 255, 255, 0.08);
    }

    .btn-neomorphic:active {
      box-shadow: 
        inset 4px 4px 8px rgba(0, 0, 0, 0.6),
        inset -4px -4px 8px rgba(255, 255, 255, 0.08);
    }

    /* Colores neomórficos en modo oscuro */
    .btn-neomorphic.btn-primary {
      background: linear-gradient(145deg, #3b82f6, #1e40af);
      box-shadow: 
        8px 8px 16px rgba(30, 64, 175, 0.4),
        -8px -8px 16px rgba(59, 130, 246, 0.2);
    }

    .btn-neomorphic.btn-success {
      background: linear-gradient(145deg, #10b981, #047857);
      box-shadow: 
        8px 8px 16px rgba(4, 120, 87, 0.4),
        -8px -8px 16px rgba(16, 185, 129, 0.2);
    }

    .btn-neomorphic.btn-danger {
      background: linear-gradient(145deg, #ef4444, #b91c1c);
      box-shadow: 
        8px 8px 16px rgba(185, 28, 28, 0.4),
        -8px -8px 16px rgba(239, 68, 68, 0.2);
    }

    /* Asegurar que el foco sea visible en modo oscuro */
    .btn:focus {
      box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.4);
    }

    /* Mejorar visibilidad del spinner en modo oscuro */
    .btn-loading .btn-spinner {
      border-top-color: currentColor;
      opacity: 0.8;
    }
  }
</style>
`;
