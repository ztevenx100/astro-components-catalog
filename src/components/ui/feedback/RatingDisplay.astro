    .rating-display.percentage {
      flex-direction: column;
      text-align: center;
      gap: 1rem;
    }

    .rating-display.detailed {
      padding: 1rem;
    }

    .rating-large {
      font-size: 2.5rem;
    }
  }
</style>
`;
