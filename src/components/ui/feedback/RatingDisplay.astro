<style>
  .rating-display {
    background: var(--surface-color);
    border-radius: 12px;
    padding: 1rem;
    border: 1px solid var(--border-color);
    transition: all 0.3s ease;
  }

  .rating-display:hover {
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    transform: translateY(-2px);
  }

  /* Rating Básico */
  .rating-display.basic {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.75rem 1rem;
  }

  .rating-stars {
    display: flex;
    gap: 0.2rem;
  }

  .star {
    font-size: 1.2rem;
    color: #e5e7eb;
    transition: all 0.3s ease;
  }

  .star.filled {
    color: #fbbf24;
    text-shadow: 0 0 10px rgba(251, 191, 36, 0.5);
  }

  .star.half {
    background: linear-gradient(90deg, #fbbf24 50%, #e5e7eb 50%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .rating-score {
    font-weight: 700;
    color: var(--text-color);
    font-size: 1.1rem;
  }

  .rating-count {
    color: var(--text-secondary);
    font-size: 0.9rem;
  }

  /* Rating con Porcentaje */
  .rating-display.percentage {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1.5rem;
  }

  .rating-circle {
    position: relative;
    flex-shrink: 0;
  }

  .circle-progress {
    transform: rotate(-90deg);
  }

  .circle-bg {
    stroke: var(--border-color);
  }

  .circle-fill {
    stroke: #10b981;
    stroke-linecap: round;
    stroke-dasharray: 157.08; /* 2 * π * 25 */
    stroke-dashoffset: calc(157.08 - (157.08 * var(--progress)) / 100);
    transition: stroke-dashoffset 1s ease-in-out;
  }

  .circle-text {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    font-weight: 700;
    color: var(--text-color);
    font-size: 0.9rem;
  }

  .rating-info h4 {
    margin: 0 0 0.25rem 0;
    color: var(--text-color);
    font-size: 1.1rem;
    font-weight: 600;
  }

  .rating-info p {
    margin: 0;
    color: var(--text-secondary);
    font-size: 0.9rem;
  }

  /* Rating Detallado */
  .rating-display.detailed {
    padding: 1.5rem;
    max-width: 350px;
  }

  .rating-header {
    margin-bottom: 1.5rem;
    text-align: center;
  }

  .rating-large {
    font-size: 3rem;
    font-weight: 700;
    color: var(--text-color);
    display: block;
    line-height: 1;
  }

  .rating-display.detailed .rating-stars {
    justify-content: center;
    margin: 0.5rem 0;
  }

  .rating-display.detailed .star {
    font-size: 1.5rem;
  }

  .rating-total {
    color: var(--text-secondary);
    font-size: 0.9rem;
    display: block;
    margin-top: 0.5rem;
  }

  .rating-breakdown {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .rating-row {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .star-label {
    font-size: 0.85rem;
    color: var(--text-secondary);
    min-width: 20px;
    font-weight: 500;
  }

  .rating-bar {
    flex: 1;
    height: 8px;
    background: var(--border-color);
    border-radius: 4px;
    overflow: hidden;
    position: relative;
  }

  .bar-fill {
    height: 100%;
    background: linear-gradient(90deg, #fbbf24, #f59e0b);
    border-radius: 4px;
    width: var(--width);
    transition: width 1s ease-out;
    animation: fillBar 1.5s ease-out;
  }

  .bar-count {
    font-size: 0.8rem;
    color: var(--text-secondary);
    min-width: 35px;
    text-align: right;
    font-weight: 500;
  }

  @keyframes fillBar {
    from {
      width: 0;
    }
    to {
      width: var(--width);
    }
  }

  /* Hover Effects */
  .rating-display.basic:hover .star.filled {
    transform: scale(1.1);
    color: #f59e0b;
  }

  .rating-display.percentage:hover .circle-fill {
    stroke: #059669;
    filter: drop-shadow(0 0 5px rgba(16, 185, 129, 0.5));
  }

  .rating-display.detailed:hover .rating-large {
    color: var(--primary-color);
    transform: scale(1.05);
    transition: all 0.3s ease;
  }

  /* Responsive */
