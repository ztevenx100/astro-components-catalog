<script is:inline>
function toggleDropdown(dropdownId) {
  const container = document.getElementById(dropdownId).parentElement;
  const isActive = container.classList.contains('active');
  
  // Cerrar todos los dropdowns
  document.querySelectorAll('.dropdown-container').forEach(el => {
    el.classList.remove('active');
  });
  
  if (!isActive) {
    container.classList.add('active');
  }
}

function selectOption(dropdownId, value) {
  const container = document.getElementById(dropdownId).parentElement;
  const label = container.querySelector('.dropdown-label');
  
  label.textContent = value;
  container.classList.remove('active');
  
  // Marcar opción como seleccionada
  const items = container.querySelectorAll('.dropdown-item');
  items.forEach(item => item.classList.remove('selected'));
  event.target.classList.add('selected');
}

function filterOptions(dropdownId, searchValue) {
  const dropdown = document.getElementById(dropdownId);
  const items = dropdown.querySelectorAll('.dropdown-item');
  
  items.forEach(item => {
    const text = item.textContent.toLowerCase();
    const matches = text.includes(searchValue.toLowerCase());
    item.style.display = matches ? 'block' : 'none';
  });
}

function toggleMultipleOption(dropdownId, element, value) {
  event.stopPropagation();
  const checkbox = element.querySelector('input[type="checkbox"]');
  checkbox.checked = !checkbox.checked;
  
  updateMultipleLabel(dropdownId);
}

function updateMultipleLabel(dropdownId) {
  const container = document.getElementById(dropdownId).parentElement;
  const label = container.querySelector('.dropdown-label');
  const checkedItems = container.querySelectorAll('input[type="checkbox"]:checked');
  
  if (checkedItems.length === 0) {
    label.textContent = 'Seleccionar tecnologías';
  } else if (checkedItems.length === 1) {
    label.textContent = checkedItems[0].parentElement.textContent.trim();
  } else {
    label.textContent = `${checkedItems.length} seleccionadas`;
  }
}

// Cerrar dropdown al hacer clic fuera
document.addEventListener('click', function(e) {
  if (!e.target.closest('.dropdown-container')) {
    document.querySelectorAll('.dropdown-container').forEach(el => {
      el.classList.remove('active');
    });
  }
});

// Make functions globally available
window.toggleDropdown = toggleDropdown;
window.selectOption = selectOption;
window.filterOptions = filterOptions;
window.toggleMultipleOption = toggleMultipleOption;
window.updateMultipleLabel = updateMultipleLabel;
</script>

