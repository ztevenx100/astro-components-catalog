<script is:inline>
function updateProgress(type, percentage) {
  const progressBar = document.getElementById(type + '-progress');
  const percentageSpan = document.getElementById(type + '-percent');
  
  if (progressBar && percentageSpan) {
    progressBar.style.width = percentage + '%';
    percentageSpan.textContent = percentage;
    
    // Animar el cambio
    progressBar.style.transition = 'width 0.8s cubic-bezier(0.4, 0, 0.2, 1)';
  }
}

// Simulaci√≥n de progreso autom√°tico
function simulateProgress() {
  const progressTypes = ['download', 'install', 'analysis'];
  
  progressTypes.forEach(type => {
    const currentPercent = parseInt(document.getElementById(type + '-percent').textContent);
    let newPercent = currentPercent + Math.floor(Math.random() * 20) + 5;
    if (newPercent > 100) newPercent = Math.floor(Math.random() * 30);
    
    updateProgress(type, newPercent);
  });
}

// Iniciar simulaci√≥n cada 3 segundos
setInterval(simulateProgress, 3000);

// Make functions globally available
window.updateProgress = updateProgress;
window.simulateProgress = simulateProgress;
</script>

<style is:global>
  .progress-container {
    margin: 1.5rem 0;
    width: 100%;
    max-width: 500px;
  }

  .progress-label {
    display: block;
    margin-bottom: 0.75rem;
    font-weight: 600;
    color: var(--text-color);
