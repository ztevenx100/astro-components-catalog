  .tooltip-trigger:focus .tooltip.bottom {
    transform: translateX(-50%) translateY(0);
  }

  .tooltip-trigger:hover .tooltip.left,
  .tooltip-trigger:focus .tooltip.left {
    transform: translateY(-50%) translateX(0);
  }

