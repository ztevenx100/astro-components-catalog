      min-width: 150px;
    }
  }

  @media (max-width: 480px) {
    .tooltip-section h4 {
      text-align: center;
      display: block;
      border-left: none;
      border-bottom: 3px solid var(--primary-color);
      padding-left: 0;
      padding-bottom: 0.5rem;
    }
