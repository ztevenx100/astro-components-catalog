<CodeViewer code={code} />

<script is:inline>
// Crear tooltips dinámicamente
document.addEventListener('DOMContentLoaded', function() {
  const tooltipTriggers = document.querySelectorAll('.tooltip-trigger');
  
  tooltipTriggers.forEach(trigger => {
    // Evitar duplicar tooltips
    if (trigger.querySelector('.tooltip')) return;
    
    const tooltipText = trigger.getAttribute('data-tooltip');
    const tooltipHtml = trigger.getAttribute('data-tooltip-html');
    const position = trigger.getAttribute('data-position') || 'top';
    
    if (tooltipText || tooltipHtml) {
      const tooltip = document.createElement('div');
      tooltip.className = `tooltip ${position}`;
      
      if (tooltipHtml) {
        tooltip.innerHTML = tooltipHtml;
      } else {
        tooltip.textContent = tooltipText;
      }
      
      trigger.appendChild(tooltip);
    }
  });
});
</script>

