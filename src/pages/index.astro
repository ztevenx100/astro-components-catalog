		</section>

		<!-- Navegaci√≥n Espec√≠fica de Botones -->
		<UnifiedNav 
			variant="cards" 
			size="sm" 
			showIcons={true} 
			showDescriptions={true}
			items={[
				{ href: "#button-system", icon: "‚ö°", label: "Sistema Base", description: "Clase .btn y variantes" },
				{ href: "#gradients", icon: "üåà", label: "Gradientes", description: "Efectos visuales" },
				{ href: "#icons", icon: "üéØ", label: "Iconos", description: "Botones con iconos" },
				{ href: "#forms", icon: "üìù", label: "Formularios", description: "Patrones de forma" },
				{ href: "#buttons", icon: "üìö", label: "Legacy", description: "Ejemplos anteriores" }
			]} 
