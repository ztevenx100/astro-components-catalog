			variant="pills" 
			size="md" 
			showIcons={true} 
			items={[
				{ href: "#theme-demo", icon: "üé®", label: "Tema" },
				{ href: "#buttons", icon: "üîò", label: "Botones" },
				{ href: "#button-system", icon: "‚ö°", label: "Sistema" },
				{ href: "#cards", icon: "üÉè", label: "Tarjetas" },
				{ href: "#forms", icon: "üìù", label: "Formularios" },
				{ href: "#layout", icon: "üèóÔ∏è", label: "Layout" },
				{ href: "#feedback", icon: "üí¨", label: "Feedback" },
				{ href: "#interactive", icon: "üîÑ", label: "Interactivos" },
				{ href: "#navigation", icon: "üß≠", label: "Navegaci√≥n" }
			]} 
		/>

		<section id="theme-demo" class="section">
