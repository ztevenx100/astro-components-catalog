<style>
	.catalog-container {
		max-width: 1200px;
		margin: 0 auto;
	}

	.catalog-header {
		text-align: center;
		margin-bottom: 3rem;
		padding: 2rem;
		background: var(--surface-color);
		border-radius: 20px;
		box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
		transition: background 0.3s ease;
	}

	html.dark .catalog-header {
		background: var(--surface-color);
		box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
	}

	.catalog-header h1 {
		font-size: 3rem;
		margin-bottom: 1rem;
		background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
	}

	.catalog-header p {
		font-size: 1.2rem;
		color: #666;
		max-width: 600px;
		margin: 0 auto;
	}

	html.dark .catalog-header p {
		color: #a0aec0;
	}

	.section {
		margin-bottom: 4rem;
	}

	.section h2 {
		font-size: 2.5rem;
		margin-bottom: 2rem;
		text-align: center;
		color: #333;
	}

	html.dark .section h2 {
		color: #f7fafc;
	}

	.section-description {
		text-align: center;
		color: #666;
		margin-bottom: 1.5rem;
		font-size: 1.1rem;
	}

	html.dark .section-description {
		color: #a0aec0;
	}

	/* Estilos espec√≠ficos para el sistema de botones */
	.button-system-section {
		margin: 3rem 0;
		padding: 0;
	}

	.system-header {
		text-align: center;
		margin-bottom: 3rem;
	}

	.system-description {
		color: var(--text-secondary);
		font-size: 1.1rem;
		max-width: 700px;
		margin: 0 auto;
		line-height: 1.6;
	}

	.system-description code {
		background: rgba(var(--primary-color-rgb, 59, 130, 246), 0.1);
		padding: 2px 6px;
		border-radius: 4px;
		font-size: 0.9em;
		color: var(--primary-color);
	}

	.showcase-container {
		margin-bottom: 3rem;
	}

	.system-component {
		margin-bottom: 3rem;
	}

	.system-component h3 {
		color: var(--text-color);
		font-size: 1.5rem;
		margin-bottom: 1rem;
		text-align: center;
		display: flex;
		align-items: center;
		justify-content: center;
		gap: 0.5rem;
	}

	.system-extensions {
		margin-top: 2rem;
	}

	.extension-grid {
		display: grid;
		grid-template-columns: 1fr;
		gap: 2rem;
	}

	.extension-item h3 {
		color: var(--text-color);
		font-size: 1.3rem;
		margin-bottom: 1rem;
		text-align: center;
		display: flex;
		align-items: center;
		justify-content: center;
		gap: 0.5rem;
	}

	.legacy-grid {
		opacity: 0.8;
		transition: opacity 0.3s ease;
	}

	.legacy-grid:hover {
		opacity: 1;
	}

	.components-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
		gap: 2rem;
		margin-bottom: 2rem;
	}

	/* Componentes que necesitan m√°s espacio */
	.components-grid :global(.multistep-form) {
		grid-column: 1 / -1;
		max-width: 800px;
		margin: 0 auto;
	}

	.catalog-footer {
		text-align: center;
		padding: 2rem;
		margin-top: 4rem;
		background: var(--surface-color);
		border-radius: 20px;
		box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
		transition: background 0.3s ease;
	}

	html.dark .catalog-footer {
		background: var(--surface-color);
		box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
	}

	.catalog-footer p {
		color: #666;
		font-size: 1.1rem;
	}

	html.dark .catalog-footer p {
		color: #a0aec0;
	}

	/* Responsive Design */
	@media (max-width: 768px) {
		.catalog-header h1 {
			font-size: 2rem;
		}

		.catalog-header p {
			font-size: 1rem;
		}

		.section h2 {
			font-size: 2rem;
		}

		.components-grid {
			grid-template-columns: 1fr;
		}

		/* Responsive para sistema de botones */
		.button-system-section {
			margin: 2rem 0;
		}

		.system-description {
			font-size: 1rem;
		}

		.system-component h3,
		.extension-item h3 {
			font-size: 1.2rem;
		}

		.extension-grid {
			gap: 1.5rem;
		}
	}

	@media (max-width: 480px) {
		.button-system-section {
			margin: 1rem 0;
		}

		.system-header {
			margin-bottom: 2rem;
		}

		.showcase-container,
		.system-component {
			margin-bottom: 2rem;
		}
	}

	/* Scroll margin for anchor navigation */
	.section {
		scroll-margin-top: 2rem;
	}
</style>
