---
import Layout from '../layouts/Layout.astro';

// Importar componentes de botones
import PrimaryButton from '../components/ui/buttons/PrimaryButton.astro';
import GhostButton from '../components/ui/buttons/GhostButton.astro';
import NeomorphicButton from '../components/ui/buttons/NeomorphicButton.astro';
import LoadingButton from '../components/ui/buttons/LoadingButton.astro';

// Importar componentes de tarjetas
import BasicCard from '../components/ui/cards/BasicCard.astro';
import ImageCard from '../components/ui/cards/ImageCard.astro';
import ProfileCard from '../components/ui/cards/ProfileCard.astro';

// Importar componentes de formulario
import FloatingInput from '../components/ui/forms/FloatingInput.astro';
import CustomCheckbox from '../components/ui/forms/CustomCheckbox.astro';
import ToggleSwitch from '../components/ui/forms/ToggleSwitch.astro';

// Importar componentes de navegaci√≥n
import HorizontalNav from '../components/ui/navigation/HorizontalNav.astro';
---

<Layout title="Cat√°logo de Componentes CSS">
	<div class="catalog-container">
		<header class="catalog-header">
			<h1>üé® Cat√°logo de Componentes CSS</h1>
			<p>Colecci√≥n de componentes visuales modernos hechos con HTML y CSS puro</p>
		</header>

		<nav class="catalog-nav">
			<a href="#buttons" class="nav-link">Botones</a>
			<a href="#cards" class="nav-link">Tarjetas</a>
			<a href="#forms" class="nav-link">Formularios</a>
			<a href="#navigation" class="nav-link">Navegaci√≥n</a>
		</nav>

		<section id="buttons" class="section">
			<h2>üîò Botones</h2>
			<div class="components-grid">
				<PrimaryButton />
				<GhostButton />
				<NeomorphicButton />
				<LoadingButton />
			</div>
		</section>

		<section id="cards" class="section">
			<h2>üìã Tarjetas</h2>
			<div class="components-grid">
				<BasicCard />
				<ImageCard />
				<ProfileCard />
			</div>
		</section>

		<section id="forms" class="section">
			<h2>üìù Formularios</h2>
			<div class="components-grid">
				<FloatingInput />
				<CustomCheckbox />
				<ToggleSwitch />
			</div>
		</section>

		<section id="navigation" class="section">
			<h2>üß≠ Navegaci√≥n</h2>
			<div class="components-grid">
				<HorizontalNav />
			</div>
		</section>

		<footer class="catalog-footer">
			<p>Hecho con ‚ù§Ô∏è y CSS puro ‚Ä¢ Sin frameworks externos</p>
		</footer>
	</div>
</Layout>

<style>
	.catalog-container {
		max-width: 1200px;
		margin: 0 auto;
	}

	.catalog-header {
		text-align: center;
		margin-bottom: 3rem;
		padding: 2rem;
		background: var(--card-bg-light);
		border-radius: 20px;
		box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
		transition: background 0.3s ease;
	}

	html.dark .catalog-header {
		background: var(--card-bg-dark);
		box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
	}

	.catalog-header h1 {
		font-size: 3rem;
		margin-bottom: 1rem;
		background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
	}

	.catalog-header p {
		font-size: 1.2rem;
		color: #666;
		max-width: 600px;
		margin: 0 auto;
	}

	html.dark .catalog-header p {
		color: #a0aec0;
	}

	.catalog-nav {
		display: flex;
		justify-content: center;
		gap: 2rem;
		margin-bottom: 3rem;
		padding: 1.5rem;
		background: var(--card-bg-light);
		border-radius: 50px;
		box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
		flex-wrap: wrap;
		transition: background 0.3s ease;
	}

	html.dark .catalog-nav {
		background: var(--card-bg-dark);
		box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
	}

	.nav-link {
		text-decoration: none;
		color: #666;
		font-weight: 600;
		padding: 0.8rem 1.5rem;
		border-radius: 25px;
		transition: all 0.3s ease;
		position: relative;
	}

	html.dark .nav-link {
		color: #a0aec0;
	}

	.nav-link:hover {
		color: #667eea;
		background: rgba(102, 126, 234, 0.1);
		transform: translateY(-2px);
	}

	html.dark .nav-link:hover {
		color: #a3bffa;
		background: rgba(163, 191, 250, 0.1);
	}

	.section {
		margin-bottom: 4rem;
	}

	.section h2 {
		font-size: 2.5rem;
		margin-bottom: 2rem;
		text-align: center;
		color: #333;
	}

	html.dark .section h2 {
		color: #f7fafc;
	}

	.components-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
		gap: 2rem;
		margin-bottom: 2rem;
	}

	.catalog-footer {
		text-align: center;
		padding: 2rem;
		margin-top: 4rem;
		background: var(--card-bg-light);
		border-radius: 20px;
		box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
		transition: background 0.3s ease;
	}

	html.dark .catalog-footer {
		background: var(--card-bg-dark);
		box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
	}

	.catalog-footer p {
		color: #666;
		font-size: 1.1rem;
	}

	html.dark .catalog-footer p {
		color: #a0aec0;
	}

	/* Responsive Design */
	@media (max-width: 768px) {
		.catalog-header h1 {
			font-size: 2rem;
		}

		.catalog-header p {
			font-size: 1rem;
		}

		.catalog-nav {
			gap: 1rem;
			padding: 1rem;
		}

		.nav-link {
			padding: 0.6rem 1rem;
			font-size: 0.9rem;
		}

		.section h2 {
			font-size: 2rem;
		}

		.components-grid {
			grid-template-columns: 1fr;
		}
	}

	/* Scroll margin for anchor navigation */
	.section {
		scroll-margin-top: 2rem;
	}
</style>
